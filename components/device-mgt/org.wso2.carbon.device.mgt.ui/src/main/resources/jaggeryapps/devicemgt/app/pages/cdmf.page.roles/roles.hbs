{{unit "cdmf.unit.ui.title" pageTitle="Role Management"}}
{{unit "cdmf.unit.data-tables-extended"}}
{{unit "cdmf.unit.ui.modal"}}

{{#zone "breadcrumbs"}}
{{css "css/roles.css"}}
    <button class="searchToggleButton sidebar-toggle-btn" id="searchToggleBtn">
        <i class="icon fw fw-filter" ></i>
    </button>
    <li>
        <a href="{{@app.context}}/">
            {{!--<i class="icon fw fw-home"></i>--}}
            Home
        </a>
    </li>
    <li>
        <!--suppress HtmlUnknownTarget -->
        <a href="{{@app.context}}/roles">
            Roles
        </a>
    </li>
{{/zone}}

{{#zone "navbarActions"}}
    {{#unless isCloud}}
        <li>
            <!--suppress HtmlUnknownTarget -->
            <a href="{{@app.context}}/role/add" class="cu-btn ops_icon">
            <img src="/devicemgt/public/cdmf.page.assets/img/default/Icon_Add.png" >
                  <img class="whiteIcon" style="display: none" src="/devicemgt/public/cdmf.page.assets/img/hover/Icon_Add_Hover.png" >
             Add
            </a>
        </li>
    {{/unless}}
{{/zone}}

{{#zone "content"}}
    <div class="submenu detail_sub_headings">
                <ul>
                    <li><a href="{{@app.context}}/users">Users</a></li>    
                     <li><a class="active" href="{{@app.context}}/roles">Roles</a></li>
                </ul>   
    </div>
    <div class="sidebar_desc">
        <span>
            Roles
        </span>
    </div>
    {{#if hasRoles}}
        <div id="loading-content" class="col-centered">
            {{#unless isCloud}}
                {{#if removePermitted}}
                    <input type="hidden" id="can-remove" value="true"/>
                {{/if}}
                {{#if editPermitted}}
                    <input type="hidden" id="can-edit" value="true"/>
                {{/if}}
            {{/unless}}
            {{#if isCloud}}
                <input type="hidden" id="is-cloud" value="true"/>
            {{/if}}
            <i class="fw fw-settings fw-spin fw-2x"></i>
            Loading roles . . .
            <br>
        </div>

        <div id="role-table" data-cloud={{isCloud}} data-role={{adminRole}}>
            
            <table class="table table-striped table-hover list-table display responsive nowrap data-table grid-view"
                   id="role-grid">
                <thead>
                <tr class="sort-row">
                    <th>By Role Name</th>
                </tr>
                {{!--<tr class="bulk-action-row">
                    <th colspan="3"></th>
                </tr>--}}
                </thead>
                <thead class="heading-row">
                    <tr>
                        <th   class="table-heading tableHeading">Display Name</th> 
                        <th  colspan=2 class="table-heading tableHeading role-edition-col">Editions</th> 
                    </tr>
                </thead>
                <tbody id="ast-container" class="commonTabelListing" data-app-context="{{@app.context}}/"></tbody>
            </table>
        </div>

        <div id="content-filter-types" style="display: none">
            <div class="sort-title">Sort By</div>
            <div class="sort-options">
                <!--suppress HtmlUnknownTag -->
                <th>By Role name</th>
            </div>
        </div>

    {{else}}

        <div id="user-created-msg" class="container col-centered wr-content">
            <div class="wr-form">
                <p class="page-sub-title">You Haven't created roles yet.</p>
                <br>Please click <b>"Add A New Role"</b>, if you wish to add a role.
                <hr/>

                <a href="{{@app.context}}/role/add" class="cu-btn-inner">
                        <span class="fw-stack">
                            <i class="fw fw-circle-outline fw-stack-2x"></i>
                            <i class="fw fw-add fw-stack-1x"></i>
                        </span>
                    + Add
                    
                </a>
            </div>
        </div>

    {{/if}}
{{/zone}}

{{#zone "actionBar"}}
  <tr class="bulk-action-row">
        <th colspan="3">
            <ul class="tiles">
               <li class="square">
                                <a href="#" data-click-event="remove-form" class="btn square-element roles-remove-link"
                                   data-toggle="modal" data-target="#modalDemo">
                                            <span class="icon fw-stack">
                                                <i class="fw fw-circle-outline fw-stack-2x"></i>
                                                <i class="fw fw-delete fw-stack-1x"></i>
                                            </span>
                                    Delete
                                </a>
              </li>
            </ul>
        </th>
    </tr>
{{/zone}}


{{#zone "bottomJs"}}
    <!--suppress HtmlUnknownTarget -->
    <script id="role-listing" data-current-user="{{@user.username}}"
            src="{{@page.publicUri}}/templates/role-listing.hbs" type="text/x-handlebars-template"></script>
    {{js "js/role-listing.js"}}
{{/zone}}