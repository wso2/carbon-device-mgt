{{unit "cdmf.unit.ui.title" pageTitle="Group Management"}}
{{unit "cdmf.unit.ui.modal"}}

{{#zone "breadcrumbs"}}
    <li>
        <a href="{{@app.context}}/">
            <i class="icon fw fw-home"></i>
        </a>
    </li>
    <li>
        <a href="{{@app.context}}/groups">
            Groups
        </a>
    </li>
    <li>
        <a href="{{@app.context}}/group/add">
            Add
        </a>
    </li>
{{/zone}}

{{#zone "content"}}
    <div class="container container-bg  white-bg">
        <div class="col-md-12 col-lg-6 col-centered wr-content wr-login col-centered sign-panel">

            <p class="page-sub-title">Add New Group</p>

            <p>Create new device group on IoT Server</p>

            <!-- validation -->
        <span class="wr-validation-summary hidden center-block col-centered">
		    <strong class="label label-danger col-centered"></strong>
		</span>

            <hr/>
            <div class="form-login-box">
                <label class="wr-input-label">Group Name</label>

                <div class="form-group wr-input-control">
                    <input type="text right" id="name" placeholder="Group Name" data-regex="{{groupNameJSRegEx}}"
                           data-errormsg="{{groupNameRegExViolationErrorMsg}}" class="form-control">
                    <span class="groupNameError hidden glyphicon glyphicon-remove form-control-feedback"></span>
                    <label class="error groupNameEmpty hidden" for="summary"></label>
                </div>

                <label class="wr-input-label">Description</label>

                <div class="wr-input-control">
                    <input type="text right" id="description" placeholder="Description">
                </div>

                <div class="wr-input-control">
                    <button class="wr-btn" id="add-group-btn">
                        Add</button>
                    <button class="wr-btn" onclick="window.location = '{{@app.context}}/groups';return false;">
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>
{{/zone}}
{{#zone "bottomJs"}}
    {{js "js/group-add.js"}}
{{/zone}}