    <jaxrs:server id="authenticationService" address="/authentication">
        <jaxrs:serviceBeans>
            <ref bean="authenticationServiceBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider"/>
            <ref bean="errorHandler"/>
        </jaxrs:providers>
    </jaxrs:server>
