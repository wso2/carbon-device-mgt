<!-- content/body -->

{{unit "cdmf.unit.ui.modal"}}
<style>

.itm-wiz.itm-wiz-current {
    font-weight: 700;
    color: #0ea2ef;
}

.itm-wiz {
    color: #333333;
}

</style>
<div class="submenu detail_sub_headings">
                <ul>
                    <li><a href="{{@app.context}}/users">Users</a></li>    
                     <li><a class="active" href="{{@app.context}}/roles">Roles</a></li>
                </ul>   
    </div>
{{#if isEdit}}    
<h1>Edit Role permissions</h1>
{{else}}
<h1>Assign Permissions </h1>
{{/if}}
<div class="row">
    <div class="col-md-12">        
        <!-- content -->
        {{#if isEdit}}
        <div class="stepsDiv" id="role_wizard_header">
             <div class="stepNavBar" style="color:#8492af;">
                
                <div class="addDevice">Role Name</div>
                <div>{{roleName}}</div>
                
            <div id="usersListContainer"></div>
            </div>
        </div>
        {{else}}
        <div class="stepsDiv" id="role_wizard_header">
            <div class="stepNavBar">
                
                <div class="addDevice">Add Role</div>
            </div>
            <div class="stepContent">
                    <span> 01 </span>
                        <div class="itm-wiz itm-wiz-current" data-step="policy-platform">
                            <span>  Add a role</span>
                        </div>
                    
                        <div class="dividerPadding"> <img src="/devicemgt/public/cdmf.page.assets/img/Sidebar_Divider.png" style="vertical-align: inherit;margin-right: 5px;"></div>
                        <div>
                            <span> 02 </span>
                    <div class="itm-wiz itm-wiz-active" data-step="policy-profile">
                        <span>  Assign permissions</span>
                    </div>
                        </div>
            </div>
        </div>
        {{/if}}
        <div id="role-create-form" class="wr-content">
            <div class="wr-form">
                <div id="permission-add-error-msg" class="alert alert-danger hidden" role="alert">
                    <i class="icon fw fw-error"></i><span></span>
                </div>
                 
                {{!--<p class="page-sub-title">Change Role permissions</p>--}}
                {{!--<div class="wr-steps hidden" id="role_wizard_header">
                    <hr />
                    <div class="col-md-4 col-xs-6">
                        <div class="itm-wiz" data-step="policy-platform">
                            <div class="wiz-no">1</div>
                            <div class="wiz-lbl hidden-xs"><span>Add a role</span></div>
                        </div>
                        <br class="c-both" />
                    </div>
                    <div class="col-md-4 col-xs-6">
                        <div class="itm-wiz itm-wiz-current" data-step="policy-profile">
                            <div class="wiz-no">2</div>
                            <div class="wiz-lbl hidden-xs"><span>Assign permissions</span></div>
                        </div>
                        <br class="c-both" />
                    </div>
                    <br /><br />
                </div>
                <hr />--}}
                 
                <div class="row no-gutter detail_box">
                    <div >
                        <div id="role-create-error-msg" class="alert alert-danger hidden" role="alert">
                            <i class="icon fw fw-error"></i><span></span>
                        </div>
                        <div id="permissionList" class="well" data-currentrole="{{roleName}}">
                            <div id="loading-content" class="col-centered">
                                <i class="fw fw-settings fw-spin fw-2x"></i>
                                Loading permissions list . . .
                                <br>
                            </div>
                        </div>
                         <br>
                <button id="assign-permission-back" class="wr-btn back_btns">Back</button>
                <button id="update-permissions-btn" class="wr-btn" style="float:right;">Done</button>
                    </div>
                </div>
               
            </div>
        </div>
        <div id="role-created-msg" class=" wr-content hidden">
            <div class="wr-form detail_box">
                <p class="page-sub-title" style="padding-top:0px;">Permissions were assigned to the role successfully.</p>
                <br>Please click <b>"Add Another Role"</b>, if you wish to add another role or click
                <b>"View Role List"</b> to complete the process and go back to the role list.
                <hr />
                <br>
                <button class="wr-btn" onclick="window.location.href='{{@app.context}}/roles'">
                    View Role List
                </button>
                <a href="{{@app.context}}/role/add" class="cu-btn-inner ops_icon">
                  <img src="/devicemgt/public/cdmf.page.assets/img/default/Icon_Add.png" >
                  <img class="whiteIcon" style="display: none" src="/devicemgt/public/cdmf.page.assets/img/hover/Icon_Add_Hover.png" >
                    Add Role
                </a>
            </div>
        </div>
        <!-- /content -->
    </div>
</div>
<!-- /content/body -->
{{#zone "bottomJs"}}
    <script id="list-partial" src="{{@unit.publicUri}}/templates/list-partial.hbs"
            type="text/x-handlebars-template"></script>
    <script id="tree-template" src="{{@unit.publicUri}}/templates/tree-template.hbs"
            type="text/x-handlebars-template"></script>
            <script id="usersList-view" src="{{@unit.publicUri}}/templates/usersList.hbs"
                data-role-name="{{roleName}}"  type="text/x-handlebars-template"></script>
    {{js "js/bottomJs.js"}}
{{/zone}}

